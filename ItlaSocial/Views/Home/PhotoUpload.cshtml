@{
    ViewBag.Title = "Profile Photo Upload";
}

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="PhotoUpload">
    <div class="form-group">
        <div class="col-md-10">
            <label class="col-md-2 control-label">Upload a profile photo</label>
            <input type="file" name="files" id="gallery-photo-add" class="form-control"  accept="image/*" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>
</form>
<div class="gallery col-md-12"></div>

@section Scripts{
    <script type="text/javascript" src="~/js/PhotoPreview.js"></script>
}
